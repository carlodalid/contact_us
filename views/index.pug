extends layout.pug

block head
 title= title
 link(href="/stylesheets/custom.css", rel="stylesheet")
 script(src="https://code.jquery.com/jquery-3.2.1.min.js", integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=", crossorigin="anonymous")
 script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js")
 script(src="/javascripts/custom.js")

block content
 div.row
   div.col-md-6.col-md-offset-3
     div.well.well-sm.contactus
       form.form-horizontal.submitForm(method="post")
         fieldset
           legend.text-center Contact Us

           div.form-group
             label.col-md-3.control-label(for="name") First Name
             div.col-md-9
               input#name.form-control(name="name", type="text", placeholder="Your firstname", required="true")

           div.form-group
             label.col-md-3.control-label(for="email") Email Address
             div.col-md-9
               input#email.form-control(name="email", type="email", placeholder="Your email address", required="true")

           div.form-group
             label.col-md-3.control-label(form="message") Message Body
             div.col-md-9
               textarea.form-control#message(name="message", placeholder="Please enter your message here...", rows="5", required="true")

           div.form-group
             div.col-md-3.col-md-offset-3.submitwrapper
               button.btn.btn-primary.btn-lg#submit(type="button") Submit

